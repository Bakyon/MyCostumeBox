{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Costume:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        {{ form_widget(form.category,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        {{ form_widget(form.description,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="status">Status:</label>
        {{ form_widget(form.status,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="size">Size:</label>
        {{ form_widget(form.size,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="owner">Owner fb link:</label>
        {{ form_widget(form.owner,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="price">Test/Sale price:</label>
        {{ form_widget(form.price,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="priceFes">Fes price: (Optional)</label>
        {{ form_widget(form.priceFes,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="image">Upload new image:</label>
        {{ form_widget(form.image,{
        }) }}
    </div>
    <div class="form-group">
        <label for="current-image">Current image:</label>
        <div class="row">
            <div class="row col-12 col-sm-9 col-md-6 col-lg-3">
                <div class="card">
                    {% if product.image is not empty %}
                        <img class="card-img-top" src="{{ asset('Images/' ~ product.image) }}">
                    {% else %}
                        <img class="card-img-top" src="{{ asset('Images/No-Image-Available.jpg') }}">
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="align-items-center">
        <input type="submit" name="to_do_create" value="Update" class="btn btn-primary"/>
        <input type="reset" value="Reset" class="btn btn-default"/>
        <a href="{{ path('app_products') }}" class="btn btn-danger">Cancel</a>
    </div>
    {{ form_end(form) }}
{% endblock %}