{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Please update your info before accessing your profile page</h2>
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'value': info.name
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        <label for="category">Phone number:</label>
        {{ form_widget(form.phone,{
            'attr':{
                'class':'form-control',
                'value': info.phone
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="description">Email:</label>
        {{ form_widget(form.email,{
            'attr':{
                'class':'form-control',
                'value': info.email
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="description">Address:</label>
        {{ form_widget(form.address,{
            'attr':{
                'class':'form-control',
                'value': info.address
            }
        }) }}
    </div>
    <input type="submit" name="to_do_create" value="Update" class="btn btn-primary"/>
    <input type="reset" value="Reset" class="btn btn-default"/>
    <a href="{{ path('app_profile') }}" class="btn btn-danger">Cancel</a>
    {{ form_end(form) }}
{% endblock %}